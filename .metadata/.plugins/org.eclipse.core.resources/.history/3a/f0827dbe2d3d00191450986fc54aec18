package course;

import java.util.Scanner;

public class WhileFor {

	public static void main(String[] args) {
		Scanner sc = new Scanner (System.in);
			int n = sc.nextInt();
			
			while(n <=0 ) {
				System.out.println("entre com um numero positivo: ");
				n = sc.nextInt();
			}
			
			sc.close();
	}
}